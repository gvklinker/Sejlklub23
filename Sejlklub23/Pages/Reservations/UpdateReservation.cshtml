@page
@model Sejlklub23.Pages.Reservations.UpdateReservationModel
@{
    ViewData["Title"] = "Update reservation";
}
<h1>Reserve boat</h1>
<form method="post">
    <input type="hidden" asp-for="@Model.ReservationToUpdate.Id" />
    <div class="form-group">
        <label class="control-label">Member</label>
        <select asp-for="@Model.ReservationToUpdate.MemberId" asp-items="@Model.MemberList" class="form-control">
            <option value="">--Select a member--</option>
        </select>

    </div>
    <div class="form-group">
        <label class="control-label">Boat</label>
        <select asp-for="@Model.ReservationToUpdate.BoatId" asp-items="@Model.BoatList" class="form-control">
            <option value="">--Select a boat--</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ReservationToUpdate.StartOfLocation" class="control-label"></label>
        <input asp-for="@Model.ReservationToUpdate.StartOfLocation" class="form-control" />
        <span asp-validation-for="@Model.ReservationToUpdate.StartOfLocation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ReservationToUpdate.LocationDuration" class="control-label"></label>
        <input asp-for="@Model.ReservationToUpdate.LocationDuration" class="form-control" />
        <span asp-validation-for="@Model.ReservationToUpdate.LocationDuration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update" asp-page-handler="Update" class="btn btn-primary" />
        <input type="submit" value="Delete" asp-page-handler="Delete" class="btn btn-primary" />
    </div>


</form>